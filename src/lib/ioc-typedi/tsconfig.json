{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "bin",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "lib": ["es6"],
        "types": ["reflect-metadata"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    }
}