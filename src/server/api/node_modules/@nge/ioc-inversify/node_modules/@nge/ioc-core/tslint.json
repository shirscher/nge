{
    "extends": "tslint:recommended",
    "rules": {
        "member-ordering": [
            true,
            { "order": "fields-first" }
        ],
        "no-magic-numbers": true,
        "no-unnecessary-type-assertions": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "variable-name": [
            "allow-leading-underscore" // TODO: Update to allow on private members only
        ]
    }
}